//- base layout for document sections
include mixins/elements
include mixins/structures
include mixins/tables

mixin section-title
  h1 #[span.section-number #{section.number}] #{section.title}

mixin doc-toc(sections)
  if sections.length
    ul.toc
      each section in sections
        li: a(href='#' + section.id) #{section.number} #{section.title}
        +doc-toc(section.contents)

block content
