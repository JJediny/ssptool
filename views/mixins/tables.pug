//- various tables ...

mixin satisfied(sats)
  table.table
    thead
      tr
        td Component
        td Name
        td Status
    tbody
      each sat in sats
        tr
          td: a(href=linkto.component(sat.component_key))= sat.component_key
          td= sat.component && sat.component.name
          td= sat.implementation_status

mixin satisfies(sats)
  table.table
    thead
      tr
        td Control
        td Name
        td Status
    tbody
      each sat in sats
        tr
          td: a(href=linkto.control(sat.standard_key, sat.control_key))
            = sat.control_key
          td= sat.control && sat.control.name
          td= sat.implementation_status

